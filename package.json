{
  "name": "cbcf-metrics-app",
  "version": "1.1.5",
  "description": "Painel de Mï¿½tricas e Metas CBCF",
  "main": "electron/main.js",
  "author": "Thiago Griebel",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/tgriebell/CBCF_Metrics_App.git"
  },
  "scripts": {
    "dev": "concurrently -k \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:electron": "electron .",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "pyinstaller --noconfirm main.spec",
    "dist": "npm run build:frontend && npm run build:backend && electron-builder"
  },
  "build": {
    "publish": {
      "provider": "github",
      "owner": "tgriebell",
      "repo": "CBCF_Metrics_App"
    },
    "appId": "com.cbcf.metrics",
    "productName": "CBCF Metrics",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "frontend/public/img/splash.ico",
      "legalTrademarks": "Dr. Rafael Evaristo"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CBCF Metrics",
      "runAfterFinish": true,
      "installerIcon": "frontend/public/img/splash.ico",
      "uninstallerIcon": "frontend/public/img/splash.ico",
      "installerHeaderIcon": "frontend/public/img/splash.ico",
      "deleteAppDataOnUninstall": true
    },
    "extraResources": [
      {
        "from": "dist/main.exe",
        "to": "backend-dist/main.exe"
      }
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3"
  }
}
